
public class stt_50_VuBinhMinh_bai11_12_13 {

	public static void main(String[] args) {
		int[][] arr = {{1,3,7,9},{2,4,6,8},{10,20,30,40}} ;
		
		System.out.println("Cho mảng 2 chiều: ");
		for(int[] i : arr) {
			System.out.println();
			for(int j : i) {
				System.out.print(j + " ");
			}
		}
		int max = 0;
		for(int[] i : arr) {
			for(int j : i) {
				if(j > max) max = j;
			}
		}
		System.out.println(max);

	}

}
