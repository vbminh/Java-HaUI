package PhieuBT;

import java.util.Scanner;

public class UCLN {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		try {
			System.out.println("\t======UCLN======");
			System.out.print("Nhập vào số thứ nhất:  ");
			int n;
			do {
				n = sc.nextInt();
				if(n < 0)
					System.out.println("Không hợp lệ. Hãy nhập lại");
			}while(n < 0);
			
			System.out.print("Nhập vào số thứ hai:  ");
			int m;
			do {
				m = sc.nextInt();
				if(m < 0)
					System.out.println("Không hợp lệ. Hãy nhập lại");
			}while(m < 0);
			
			System.out.println("UCLN của " + m + " và " + n + " là: " + Source.UCLN(m, n));
		}
		catch (Exception e) {
			System.out.println("Hãy nhập một số nguyên dương");
		}
		
		sc.close();

	}

}
