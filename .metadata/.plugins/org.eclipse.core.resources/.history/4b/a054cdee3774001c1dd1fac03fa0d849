import java.util.Arrays;

public class stt_50_VuBinhMinh_bai10 {

	public static void main(String[] args) {
		
		int[] arr = {1,3,7,2,6,5,0,9,8};
		System.out.print("Cho mảng: ");
		for(int i : arr) System.out.print(i + " ");
		
		int count = 0;
		for(int i : arr) {
			if(SoNguyenTo(i)) count++;
		}
		
		int[] arr1 = new int[count];
		int[] arr2 = new int[arr.length - count];
		
		Arrays.sort(arr1);
		Arrays.sort(arr2);
		
		System.arraycopy(arr, 0, arr1, 0, count);
		System.arraycopy(arr, count, arr2, 0, arr.length - count);
		System.out.print( " dd " + count);

		
		
		System.out.println("\nMảng sau khi tìm và sắp xếp: ");
		for(int i : arr) System.out.print(i + " ");
	}
	public static boolean SoNguyenTo(int n) {
		if(n < 0)
			return false;
		else if(n < 2)
			return false;
		for(int i = 2; i <= Math.sqrt(n); i++) {
			if(n % i == 0) return false;
		}
		return true;
	}
}
